<Window x:Class="TelecomNevaSvyas.CodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:TelecomNevaSvyas"
        mc:Ignorable="d"
        Title="Code" 
        Height="150" Width="250"
        Closing="Code_OnClosing"
        WindowStyle="None">
    <Grid>
        <Label VerticalAlignment="Top" HorizontalAlignment="Center"
               FontSize="44" x:Name="CodeLabel" Content=""
               Margin="0 5 0 0 "/>
        <Button VerticalAlignment="Top" HorizontalAlignment="Right"
                Height="34" Width="30"
                Background="Transparent" Content="x"
                Padding="0 0 0 0"
                FontSize="18" Click="ButtonBase_OnClick"/>
    </Grid>
</Window>
