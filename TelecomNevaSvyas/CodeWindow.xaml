<Window x:Class="TelecomNevaSvyas.CodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:TelecomNevaSvyas"
        mc:Ignorable="d"
        Title="Code" 
        Height="150" Width="250"
        WindowStyle="None"
        Background="Transparent">
    <Border Background="White">
        <Grid Margin="0 0 0 0">
            <Label VerticalAlignment="Top" HorizontalAlignment="Center"
                   FontSize="44" x:Name="CodeLabel" Content=""
                   Margin="0 5 0 0 "/>
            <Button VerticalAlignment="Bottom" HorizontalAlignment="Center"
                    Height="30" Width="80"
                    Background="Transparent" Content="Close" 
                    Margin="0 0 0 20"
                    FontSize="18" Click="ButtonBase_OnClick"/>
        </Grid>
    </Border>
</Window>
